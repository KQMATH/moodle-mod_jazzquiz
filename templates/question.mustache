{{!
    @template mod_jazzquiz/question

    Display attempt form for a question.

    Example context (json):
    {
        "instructor": false,
        "question": "",
        "slot": 1
    }
}}
<div class="jazzquiz-box {{#instructor}}instructor{{/instructor}}">
    <form id="jazzquiz_question_form" action="?" method="post" enctype="multipart/form-data" accept-charset="utf-8" onsubmit="return false;">
        <div class="jazzquiz-response-container">{{{question}}}</div>
        <input type="hidden" name="slot" value="{{slot}}">
        {{^instructor}}
        <div class="save_row">
            <div class="jazzquiz-save-question">
                <button class="btn btn-primary">{{#str}}core, submit{{/str}}</button>
            </div>
        </div>
        {{/instructor}}
    </form>
</div>
